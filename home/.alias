#-----------------------------
# homeshick helpers
#-----------------------------
alias dot="homeshick"

#-----------------------------
# hub.github.com
#-----------------------------
alias git="hub"
alias gti="git"
alias got="git"
alias gut="git"

#-----------------------------
# VM lists from Azure and DO
#-----------------------------
alias dovms="doctl compute droplet list --format \"ID,Name,PublicIPv4\""
alias azvms="az vm list-ip-addresses --output table"

#-----------------------------
# NVM Update to latest LTS
#-----------------------------
alias update-node="nvm install 'lts/*' --reinstall-packages-from=default --latest-npm"

#-----------------------------
# thefuck - mistyped commands
#-----------------------------

if type thefuck > /dev/null 2>&1; then
  eval $(thefuck --alias)
fi

#-----------------------------
# Neovim 
#-----------------------------

if type nvim > /dev/null 2>&1; then
  alias vi="nvim"
  alias vim="nvim"
fi

#-----------------------------
# k
#-----------------------------
alias kah="k -Ah"

