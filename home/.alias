command_exists () {
    command -v "$1" &> /dev/null ;
}

#-----------------------------
# homeshick helpers
#-----------------------------
if command_exists homeshick ; then
    alias dot="homeshick"
fi

#-----------------------------
# vi
#-----------------------------
if command_exists nvim ; then
    alias vi=nvim
fi

#-----------------------------
# hub.github.com
#-----------------------------
if command_exists hub ; then
    alias git=hub
fi
