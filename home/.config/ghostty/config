# Application Behavior
quit-after-last-window-closed = true

# Shell Integration
shell-integration-features = cursor,sudo,title,ssh-env,ssh-terminfo

# Quick Terminal
keybind = global:ctrl+grave_accent=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-size = 50%,50%
quick-terminal-screen = mouse
quick-terminal-animation-duration = 0.1
quick-terminal-space-behavior = move

# Clipboard
clipboard-read = allow
copy-on-select = clipboard

# Scrollback
scrollback-limit = 10000000

# Window & Display
window-save-state = always
window-theme = system
window-padding-balance = true
window-padding-x = 15
window-padding-y = 10,0
window-padding-color = extend
window-width = 166
window-height = 54
window-inherit-font-size = true

# Appearance & Transparency
background-opacity = 0.9
background-blur = 15
unfocused-split-opacity = 0.5
unfocused-split-fill = 181825
split-divider-color = 585b70
theme = Catppuccin Mocha
bold-is-bright = true
minimum-contrast = 1.1

# Mouse & Selection
focus-follows-mouse = true
mouse-hide-while-typing = true

# Typography
font-family = "Berkeley Mono"
font-size = 14
font-thicken = true
font-feature = calt
font-feature = ss01
font-feature = zero
font-codepoint-map = U+E000-U+F8FF=Symbols Nerd Font Mono
font-codepoint-map = U+F0000-U+FFFFF=Symbols Nerd Font Mono

# Links
link-previews = true

# Shaders
custom-shader = shaders/cursor_warp.glsl

# Cursor
cursor-color = f5e0dc
cursor-text = 11111b
cursor-click-to-move = true

# macOS Specific
macos-titlebar-style = hidden
macos-titlebar-proxy-icon = hidden

# Keybindings
keybind = shift+enter=text:\n
keybind = ctrl+enter=text:\r
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+j=goto_split:bottom
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+l=goto_split:right
keybind = cmd+shift+left=resize_split:left,40
keybind = cmd+shift+right=resize_split:right,40
keybind = cmd+shift+up=resize_split:up,40
keybind = cmd+shift+down=resize_split:down,40

# Split management
keybind = cmd+shift+e=equalize_splits

# Scrollback & screen export
keybind = cmd+shift+s=write_scrollback_file:paste
keybind = cmd+shift+c=copy_url_to_clipboard
